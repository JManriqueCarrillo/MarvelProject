<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comic_image"
        android:layout_width="168dp"
        android:layout_height="252dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/portrait_xlarge"
        android:contentDescription="@string/accessibility_comic_image" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/comic_details_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/more_info"
        app:layout_constraintEnd_toEndOf="@id/comic_image"
        app:layout_constraintStart_toStartOf="@id/comic_image"
        app:layout_constraintTop_toBottomOf="@id/comic_image" />

    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/comic_buy_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/buy_it"
        app:layout_constraintEnd_toEndOf="@id/comic_image"
        app:layout_constraintStart_toStartOf="@id/comic_image"
        app:layout_constraintTop_toBottomOf="@id/comic_details_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>